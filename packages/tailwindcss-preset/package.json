{
	"name": "@acdh-oeaw/tailwindcss-preset",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./plugin": "./dist/plugin.js"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsup ./src/index.ts",
		"format:check": "prettier . --cache --check --ignore-path ../../.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache --ignore-path ../../.gitignore",
		"lint:fix": "pnpm run lint:code:check --fix",
		"prepublishOnly": "run-s validate build",
		"test": "exit 0",
		"types:check": "tsc --noEmit",
		"validate": "run-s format:check lint:check types:check test"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"tailwindcss-animate": "^1.0.7"
	},
	"peerDependencies": {
		"tailwindcss": "3.x"
	},
	"devDependencies": {
		"@acdh-oeaw/design-tokens": "workspace:*",
		"@acdh-oeaw/eslint-config": "^1.0.5",
		"@acdh-oeaw/tsconfig-lib": "^1.0.0",
		"eslint": "^8.55.0",
		"tailwindcss": "^3.3.5",
		"tsup": "^8.0.1",
		"typescript": "^5.3.2"
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict"
		]
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(js|ts)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"tsup": {
		"bundle": false,
		"clean": true,
		"dts": true,
		"format": [
			"esm"
		],
		"minify": false,
		"outDir": "dist",
		"sourcemap": true,
		"target": "es2022",
		"treeshake": true
	}
}
