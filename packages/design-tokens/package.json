{
	"name": "@acdh-oeaw/design-tokens",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./css/*.css": "./dist/*.css"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "run-s generate:color-palettes generate:tokens copy",
		"clean": "rm -rf dist",
		"copy": "cp -r ./src/*.css ./src/color-palettes ./dist/",
		"generate:color-palettes": "tsx ./scripts/generate-color-palettes.ts",
		"generate:tokens": "tsx ./scripts/generate-tokens.ts",
		"format:check": "prettier . --cache --check --ignore-path ../../.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p \"lint:*:check\"",
		"lint:fix": "run-p \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ignore-path ../../.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ../../.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"prepublishOnly": "run-s validate build",
		"test": "exit 0",
		"types:check": "tsc --noEmit",
		"validate": "run-s format:check lint:check types:check test"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.5",
		"@acdh-oeaw/lib": "^0.1.6",
		"@acdh-oeaw/stylelint-config": "^1.0.7",
		"@acdh-oeaw/tsconfig-lib": "^1.0.0",
		"@radix-ui/colors": "^3.0.0",
		"@types/node": "^20.10.3",
		"@types/postcss-import": "^14.0.3",
		"@types/postcss-js": "^4.0.4",
		"colorjs.io": "^0.4.5",
		"eslint": "^8.55.0",
		"postcss": "^8.4.32",
		"postcss-import": "^15.1.0",
		"postcss-js": "^4.0.1",
		"stylelint": "^15.11.0",
		"tsx": "^4.6.2",
		"typescript": "^5.3.2"
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict"
		]
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config",
		"rules": {
			"custom-property-empty-line-before": null,
			"no-duplicate-selectors": null,
			"number-max-precision": null
		}
	}
}
