{
	"name": "@acdh-oeaw/tailwindcss-preset",
	"version": "0.0.8",
	"license": "MIT",
	"type": "module",
	"main": "./src/preset.ts",
	"files": [
		"./src/"
	],
	"packageManager": "pnpm@8.6.9",
	"scripts": {
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache --ignore-path ./.gitignore",
		"lint:fix": "pnpm run lint:check --fix",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.9",
		"tailwindcss-animate": "^1.0.6"
	},
	"peerDependencies": {
		"tailwindcss": "3.x"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/tsconfig-lib": "^1.0.0",
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"eslint": "^8.45.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.2.3",
		"npm-run-all2": "^6.0.6",
		"prettier": "^3.0.0",
		"simple-git-hooks": "^2.8.1",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.1.6"
	},
	"eslintConfig": {
		"extends": "@acdh-oeaw/eslint-config"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
